<h1>Create a post<h1>
  <form action="<%=sub_posts_url(@sub)%>" method = "post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <label for="title">Title</label>
    <input type="text" name="post[title]" id = "title">
    <br>
    <label for="url">Link</label>
    <input type="text" name="post[url]" id = "url">
    <br>

    <% @subs.each do |sub| %>
      <label for="<%= sub.title %>"><%= sub.title %></label>

      <input type = "checkbox" name = "post[sub_ids][]" value = "<%= sub.id %>" id="<%= sub.title %>">
      <br>
    <% end %>

    <label for="content">Content</label>
    <input type="textarea" name="post[content]" id = "content">
    <input type="submit" value="Submit Post">
  </form>
